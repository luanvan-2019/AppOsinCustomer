<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="13"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDungLeActivity">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.appcompat.widget.Toolbar
            app:navigationIcon="@drawable/ic_back"
            android:id="@+id/toolbar_datDungle"
            android:background="@drawable/bg_gradient"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
        </androidx.appcompat.widget.Toolbar>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="Đặt dùng lẻ"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    </RelativeLayout>
    <ScrollView
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/title_tientrinh"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:textSize="16dp"
                    android:textColor="#0987DB"
                    android:text="Thông tin"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="16dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/disable"
                    android:text="Xác nhận"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="16dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/disable"
                    android:text="Thanh toán"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relative_tientrinh"
                android:layout_below="@id/title_tientrinh"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ic_thongtin"
                    android:src="@drawable/ic_thongtin_enable"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <View
                    android:id="@+id/line_thonhtin_to_xacnhan"
                    android:layout_toRightOf="@+id/ic_thongtin"
                    android:background="@color/disable"
                    android:layout_centerVertical="true"
                    android:layout_width="90dp"
                    android:layout_height="1dp"/>
                <ImageView
                    android:id="@+id/ic_xacnhan"
                    android:layout_toRightOf="@+id/line_thonhtin_to_xacnhan"
                    android:src="@drawable/ic_xacnhan_disable"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <View
                    android:id="@+id/line_xacnhan_to_thanhtoan"
                    android:layout_toRightOf="@+id/ic_xacnhan"
                    android:background="@color/disable"
                    android:layout_centerVertical="true"
                    android:layout_width="90dp"
                    android:layout_height="1dp"/>
                <ImageView
                    android:id="@+id/ic_thanh_toan"
                    android:layout_toRightOf="@id/line_xacnhan_to_thanhtoan"
                    android:src="@drawable/ic_thanhtoan_disable"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_input_diadiem"
                android:layout_below="@+id/relative_tientrinh"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_placeholder"
                    android:id="@+id/ic_diadiem_input"
                    android:layout_centerVertical="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/ic_diadiem_input"
                    android:textSize="13dp"
                    android:text="ĐỊA ĐIỂM LÀM VIỆC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_input_diadiem"
                android:layout_below="@id/relative_input_diadiem"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="#F3F3F3"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:hint="Chọn vị trí của bạn ..."
                    android:id="@+id/edt_diadiem"
                    android:focusable="false"
                    android:clickable="true"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:id="@+id/relative_lich_lamviec"
                android:layout_below="@+id/txt_input_diadiem"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ic_lich_input"
                    android:src="@drawable/ic_calendar_1"
                    android:layout_centerVertical="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:layout_toRightOf="@id/ic_lich_input"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textSize="13dp"
                    android:text="LỊCH LÀM VIỆC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_input_layout"
                android:layout_below="@id/relative_lich_lamviec"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="#F3F3F3"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:focusable="false"
                    android:clickable="true"
                    android:textSize="16dp"
                    android:id="@+id/txt_input_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:id="@+id/relative_time_lamviec"
                android:layout_below="@+id/txt_input_layout"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ic_time_lamviec"
                    android:src="@drawable/ic_time"
                    android:layout_centerVertical="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:layout_toRightOf="@id/ic_time_lamviec"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textSize="13dp"
                    android:text="THỜI GIAN LÀM VIỆC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_select_time"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_layout"
                android:layout_below="@+id/relative_time_lamviec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linear_select_buoi"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_sang"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:text="Sáng"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:id="@+id/txt_chieu"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:text="Chiều"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:id="@+id/txt_toi"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:text="Tối"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_below="@+id/linear_select_buoi"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/label_gio_lam_viec"
                        android:text="Giờ làm việc:"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/ic_edit_time"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/label_gio_lam_viec"
                        android:src="@drawable/ic_edit_text"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                    <Spinner
                        android:backgroundTint="@color/enable"
                        android:layout_toRightOf="@+id/ic_edit_time"
                        android:id="@+id/select_time_1"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:id="@+id/line_spiner1_to_spiner2"
                        android:layout_centerVertical="true"
                        android:background="@color/enable"
                        android:layout_toRightOf="@+id/select_time_1"
                        android:layout_width="8dp"
                        android:layout_height="1dp"/>
                    <Spinner
                        android:backgroundTint="@color/enable"
                        android:layout_toRightOf="@+id/line_spiner1_to_spiner2"
                        android:id="@+id/select_time_2"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:textSize="15dp"
                android:textColor="#FF5722"
                android:id="@+id/txt_dichvu_gap"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/relative_select_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/relative_khuyen_mai"
                android:layout_below="@+id/txt_dichvu_gap"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ic_khuyenmai"
                    android:src="@drawable/ic_gift"
                    android:layout_centerVertical="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:layout_toRightOf="@id/ic_khuyenmai"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textSize="13dp"
                    android:text="MÃ KHUYỄN MÃI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_input_khuyenmai"
                android:layout_below="@id/relative_khuyen_mai"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="#F3F3F3"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:maxLength="6"
                    android:textColor="@color/enable"
                    android:textSize="16dp"
                    android:id="@+id/txt_input_ma_khuyenmai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:id="@+id/relative_ghichu"
                android:layout_below="@+id/txt_input_khuyenmai"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ic_ghichu"
                    android:src="@drawable/ic_note"
                    android:layout_centerVertical="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:layout_toRightOf="@id/ic_ghichu"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textSize="13dp"
                    android:text="GHI CHÚ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_below="@id/relative_ghichu"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                app:boxBackgroundColor="#F3F3F3"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="50dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:gravity="center_vertical"
                    android:textColor="#0C0C0C"
                    android:textSize="16dp"
                    android:id="@+id/txt_input_ghichu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>
    </ScrollView>


    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:id="@+id/line_bottom_datdungle"
            android:background="#AFAFAF"
            android:layout_width="match_parent"
            android:layout_height="0.1dp">
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/line_bottom_datdungle"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/label_sotien_datdungle"
                android:layout_centerVertical="true"
                android:textSize="16dp"
                android:textColor="#000000"
                android:text="Số tiền"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_centerVertical="true"
                android:text="(đã gồm phí dụng cụ)"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/label_sotien_datdungle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toLeftOf="@+id/dau_xuyec"
                android:textSize="16sp"
                android:textColor="@color/enable"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:id="@+id/id_tong_tien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/dau_xuyec"
                android:layout_toLeftOf="@+id/txt_total_time"
                android:layout_centerVertical="true"
                android:textColor="@color/enable"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_total_time"
                android:textColor="@color/enable"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="2.5h"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <Button
            android:id="@+id/btn_continue_datDungle"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:text="Tiếp tục"
            android:background="@drawable/btn_round_coner"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>