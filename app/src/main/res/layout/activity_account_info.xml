<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountInfoActivity">

    <RelativeLayout
        android:id="@+id/relative_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <androidx.appcompat.widget.Toolbar
            app:navigationIcon="@drawable/ic_back"
            android:id="@+id/toolbar_account_info"
            android:background="@drawable/bg_gradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.appcompat.widget.Toolbar>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:text="Thông tin tài khoản"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
        <TextView
            android:id="@+id/logout"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Đăng xuất"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/relative_toolbar"
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ic_account"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <TextView
            android:id="@+id/txt_chinhsuathongtin"
            android:textColor="@color/enable"
            android:textSize="16sp"
            android:text="Chỉnh sửa thông tin"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ic_account"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/line1"
            android:background="#E6E6E6"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/txt_chinhsuathongtin"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:id="@+id/label_hoten"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:text="Họ và tên"
            android:layout_below="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_input_hoten"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
        <View
            android:id="@+id/line2"
            android:background="#E6E6E6"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/label_hoten"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:id="@+id/label_sdt"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:text="Số điện thoại"
            android:layout_below="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_input_sdt"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
        <View
            android:id="@+id/line3"
            android:background="#E6E6E6"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/txt_input_sdt"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:id="@+id/label_email"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:text="Email"
            android:layout_below="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_input_email"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
        <RelativeLayout
            android:id="@+id/relative_label_diachi"
            android:background="#F1F1F1"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/txt_input_email"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:text="ĐỊA CHỈ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_diachi"
            android:layout_below="@+id/relative_label_diachi"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:id="@+id/ic_diachi"
                android:src="@drawable/ic_placeholder"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_width="26dp"
                android:layout_height="26dp"/>
            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/txt_input_address"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/ic_diachi"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:id="@+id/line4"
            android:background="#E6E6E6"
            android:layout_below="@+id/relative_diachi"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>



</RelativeLayout>