<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_main"
    android:weightSum="30"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:background="#258BD0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:ignore="NestedWeights">
        </LinearLayout>
        <LinearLayout
            android:background="#8ABE41"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_weight="10"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:id="@+id/btn_login_phone"
            android:text="Đăng nhập bằng số điện thoại"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_login_face"
            android:text="Đăng nhập bằng tài khoản Facebook"
            android:background="@drawable/bg_btn_register"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:layout_below="@id/btn_login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_alignParentBottom="true"
            android:src="@drawable/bg_login_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>