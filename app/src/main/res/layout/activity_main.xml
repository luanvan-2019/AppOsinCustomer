<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="30"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:background="#258BD0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:ignore="NestedWeights">
        </LinearLayout>
        <LinearLayout
            android:background="#8ABE41"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_weight="10"
        android:padding="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/txt_label_select_login"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="@color/enable"
            android:text="Chọn phương thức đăng nhập"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/linear_method_login"
            android:layout_below="@+id/txt_label_select_login"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/btn_login_phone"
                android:layout_weight="1"
                android:src="@drawable/ic_login_phone"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <ImageView
                android:layout_weight="1"
                android:id="@+id/btn_login_face"
                android:src="@drawable/ic_login_facebook"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/linear_method_login"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_horizontal"
                android:layout_weight="2"
                android:textColor="@color/enable"
                android:text="Số điện thoại"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/enable"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Tài khoản Facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_marginBottom="-13dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/bg_login_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>