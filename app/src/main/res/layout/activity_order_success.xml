<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderSuccessActivity">

    <RelativeLayout
        android:id="@+id/relative_toolbar_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            app:navigationIcon="@drawable/ic_home"
            android:id="@+id/toolbar_success"
            android:background="@drawable/bg_gradient"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
        </androidx.appcompat.widget.Toolbar>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="Hình thức thanh toán"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:id="@+id/toolbar_title_hinhthuc_thanhtoan"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/relative_toolbar_success"
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_checked_hoantat"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_checked"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:id="@+id/label_success"
            android:textColor="#50D123"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/img_checked_hoantat"
            android:layout_centerHorizontal="true"
            android:text="Đặt dịch vụ thành công!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_yeu_cau_tra_tien"
            android:textColor="#FF9800"
            android:text="@string/yeu_cau_tra_tien"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/label_success"
            android:layout_width="280dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_sotien_success"
            android:textStyle="bold"
            android:textSize="40sp"
            android:text="217,000đ"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/txt_sotien_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_phone_ring"
                android:src="@drawable/ic_phone_ringing"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <TextView
                android:textSize="14dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/ic_phone_ring"
                android:text="@string/text_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_danhsach_calam"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:text="Danh sách ca làm"
            android:background="@drawable/btn_round_coner"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="50dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/enable"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:text="Xem chi tiết ca làm"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_danhsach_calam"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>