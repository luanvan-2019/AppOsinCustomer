<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/status_list_order"
        android:textColor="@color/colorWhite"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/bg_text"
        android:text="Đang tìm kiếm NV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:paddingLeft="10dp"
        android:id="@+id/date_order"
        android:text="12/09/2019"
        android:layout_toRightOf="@id/status_list_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/ca_order"
        android:layout_marginTop="5dp"
        android:textStyle="italic"
        android:layout_below="@+id/date_order"
        android:text="Ca sáng (08:00 - 11:30)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/icon_diadiem"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ca_order"
        android:src="@drawable/ic_placeholder"
        android:layout_width="20dp"
        android:layout_height="20dp"/>
    <TextView
        android:layout_toRightOf="@id/icon_diadiem"
        android:layout_marginLeft="10dp"
        android:id="@+id/diadiem"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ca_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_toRightOf="@id/diadiem"
        android:layout_below="@+id/ca_order"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/gia"
        android:textColor="#FF258BCF"
        android:textStyle="bold"
        android:layout_below="@+id/diadiem"
        android:layout_marginTop="5dp"
        android:text="217,000đ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/icon_nv_nhan"
        android:layout_marginRight="11dp"
        android:layout_below="@id/status_list_order"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true" />
    <TextView
        android:layout_alignParentEnd="true"
        android:id="@+id/ma_hoadon"
        android:text="HĐ: 531561"
        android:layout_below="@id/icon_nv_nhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />
    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/gia"
        android:background="#8B8B8B"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>